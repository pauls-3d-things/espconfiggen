{
  "name": "espconfiggen",
  "version": "1.0.3",
  "description": "Code generator for ESP8266 web configuration/api and persistance",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "init:dist": "mkdirp dist",
    "init:css": "node-sass src/style.scss dist/bundle.css && cssmin dist/bundle.css > dist/bundle.min.css",
    "init:html:local": "cssmin src/indexGeneratorApp.html > dist/index.html",
    "init:config": "cp src/config.json dist/",
    "init:fonts:dir": "mkdirp dist/fonts",
    "init:fonts:files": "cp -R node_modules/font-awesome/fonts/* dist/fonts/",
    "init": "npm-run-all init:**",
    "tsc": "tsc",
    "webpack:prod": "NODE_ENV=production webpack -p",
    "webpack:dev": "webpack-dev-server -w",
    "gzip:init": "mkdirp dist/data",
    "gzip:css": "cat dist/bundle.min.css | gzip > dist/data/bundle.min.css.gz",
    "gzip:js": "cat dist/configApp.bundle.min.js | gzip > dist/data/bundle.min.js.gz",
    "gzip:html": "cat src/indexConfigApp.html | gzip > dist/data/index.html.gz",
    "gzip:zip": "cd dist/ && zip -r data.zip data/",
    "gzip": "npm-run-all gzip:*",
    "build": "npm-run-all clean init webpack:prod gzip",
    "start": "npm-run-all clean init webpack:dev"
  },
  "keywords": [
    "esp8266",
    "webconfig",
    "configuration",
    "code",
    "generator"
  ],
  "author": "Paul Smith <code@uvwxy.de>",
  "license": "ISC",
  "devDependencies": {
    "@types/file-saver": "^2.0.1",
    "@types/jquery": "^3.3.38",
    "@types/react": "^16.9.35",
    "@types/react-color": "^3.0.2",
    "@types/react-dom": "^16.9.8",
    "@types/react-monaco-editor": "^0.16.0",
    "bulma": "^0.8.2",
    "copy-webpack-plugin": "^6.0.2",
    "cpr": "^3.0.1",
    "css-loader": "^3.5.3",
    "cssmin": "^0.4.3",
    "file-saver": "^2.0.2",
    "font-awesome": "^4.7.0",
    "fork-ts-checker-webpack-plugin": "^4.1.6",
    "mkdirp": "^1.0.4",
    "monaco-editor": "^0.20.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.21",
    "react-monaco-editor": "^0.36.0",
    "style-loader": "^1.2.1",
    "trunx": "^0.40.0",
    "ts-loader": "^7.0.5",
    "tslint": "^6.1.2",
    "tslint-config-standard": "^9.0.0",
    "typescript": "^3.9.5",
    "webpack": "^4.43.0",
    "webpack-bundle-analyzer": "^4.4.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {}
}
